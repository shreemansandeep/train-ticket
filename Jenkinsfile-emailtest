pipeline{
  agent any
    stages{
    
      stage("Git Checkout"){
        steps{
              git credentialsId: 'GitID', url: 'https://github.com/shreemansandeep/Train-Ticket-Reservation-System.git'
        }
      }
      
      stage("Maven Build"){
      steps{
          sh "mvn clean install"
  
    }
}

    }
    
    post{
        always{
            mail to: "shreemansandeep@gmail.com",
            subject: "${PROJECT_NAME - Build} # ${BUILD_NUMBER} - ${BUILD_STATUS}!",
            body: "${PROJECT_NAME - Build} # ${BUILD_NUMBER} - ${BUILD_STATUS}:\nMore Info can be found here: ${env.BUILD_URL}"
        }
    }
      
   }

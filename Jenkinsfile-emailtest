pipeline{
  agent any
    stages{
    
      stage("Git Checkout"){
        steps{
              git credentialsId: 'GitID', url: 'https://github.com/shreemansandeep/Train-Ticket-Reservation-System.git'
        }
      }
      
      stage("Maven Build"){
      steps{
          sh "mvn clean install"
  
    }
}

  stage("Email Notification") {
  steps {
    script {
      post{
        always{
            mail to: "shreemansandeep@gmail.com",
            subject: "Test Email",
            body: "Test"
        }
    }
    }
  }
}
      
      }
     }

pipeline{
  agent any
    stages{
    
      stage("Git Checkout"){
        steps{
              git credentialsId: 'GitID', url: 'https://github.com/shreemansandeep/Train-Ticket-Reservation-System.git'
        }
      }
      
      stage("Maven Build"){
      steps{
          sh "mvn clean install"
  
    }
}

    }
    
    post{
        always{
            mail to: "shreemansandeep@gmail.com",
            subject: "$PROJECT_NAME - Build # $BUILD_NUMBER - $BUILD_STATUS!",
            body: "$PROJECT_NAME - Build # $BUILD_NUMBER - $BUILD_STATUS: \nCheck console output at $BUILD_URL to view the results.
        }
    }
      
   }
